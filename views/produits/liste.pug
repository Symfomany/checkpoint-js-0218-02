extends ../layout

block content
    h1.text-center Liste de nos produits
    table.table
        thead.text-center
            tr
                th(scope='col') #
                |       
                th(scope='col') Reference
                |  
                th(scope='col') Titre
                |
                th(scope='col') Note
                |
                th(scope='col') Image
        tbody.text-center
            each produit in produits
                tr
                    th(style='vertical-align: middle;' scope='row')=`${produit.id}`
                    |       
                    td(style='vertical-align: middle;')=`${produit.reference}`
                    |     
                    td(style='vertical-align: middle;')=`${produit.titre}`
                    |     
                    td(style='vertical-align: middle;')=`${produit.notation}`
                    |         
                    td(style='vertical-align: middle;')
                        img(src=`${produit.image}` alt=`${produit.titre}` height="100px")
                    |  