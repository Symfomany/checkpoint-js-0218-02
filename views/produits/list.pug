extends ../layout

block content
    a.btn.btn-outline-secondary.float-right(href=`/produits/create`) Cr√©er un nouveau produit
    p LISTE DES PRODUITS:
        table.table.table-hover.text-center
            thead.thead-dark
                tr
                th(scope='col') #
                th(scope='col') Ref
                th(scope='col') Titre
                th(scope='col') Note
                th(scope='col') Image
                
            tbody
                each produit in produits
                    tr
                    th(scope='row')
                        a(href=`/produits/read/${produit.id}`)=`${produit.id}`
                    td
                        a(href=`/produits/read/${produit.id}`)=`${produit.reference}`
                    td
                        a(href=`/produits/read/${produit.id}`)=`${produit.titre}`
                    td=`${produit.note}`
                    td 
                        img.imgtable.img-fluid(src=`${produit.image}` alt=`${produit.titre}`)