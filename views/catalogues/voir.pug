extends ../layout

block content
    h1="Page de catalogue"
    .container
        img(src="https://media.giphy.com/media/e3C4pNKkr9rji/giphy.gif" alt="Fry")
        

    table.table
        thead
            tr
            th(scope='col') id
            th(scope='col') ref
            th(scope='col') titre
            th(scope='col') note
            th(scope='col') image

        tbody
           each element in articles
            tr
                th 
                    a(href=`/catalogues/article/${element.id}`)=element.id 
                td
                    a(href=`/catalogues/article/${element.id}`)=element.reference
                td
                    a(href=`/catalogues/article/${element.id}`)=element.titre
                td=element.note
                td
                    img(src="element.image" alt=element.titre)
                td
                    a(href=`/catalogues/supprimer/${element.id}`) Supprimer cet article
    br  
    hr
    br
    a(href=`/catalogues/creer`) Cr√©er un nouvel article
    

            