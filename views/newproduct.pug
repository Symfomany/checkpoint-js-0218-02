extends ./layout
block content
        form(method="POST", action="/newproduct", enctype="multipart/form-data")
                input.form-control(required="required", name="title", placeholder="Titre de votre produit")
                input.form-control(required="required", name="reference", placeholder="Reference de votre produit")
                textarea.form-control(name="description", required, placeholder="Description de votre article")
                .form-check
                        input.form-check-input(type="checkbox", id="exampleCheck1", name="enVente" value="1")
                        label.form-check-label(for="exampleCheck1") Mettre en vente l'article
                select.form-control(name="quantity")
                        option() Quantit√©
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4
                        option(value="5") 5
                        option(value="1") 6
                        option(value="2") 7
                        option(value="3") 8
                        option(value="4") 9
                        option(value="5") 10
                select.form-control(name="note" placeholder="Note")
                        option() Note
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4
                        option(value="5") 5
                input.form-control(required="required", name="price", placeholder="Prix de votre produit")
                input.form-control(required="required", name="TVA", placeholder="TVA applicable sur le produit")
                button.btn.btn-success(type="submit") Ajouter le produit